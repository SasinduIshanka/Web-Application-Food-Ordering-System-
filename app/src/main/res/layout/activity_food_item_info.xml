<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Cus_Menu.FoodItemInfo"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal">

    <TextView
        android:id="@+id/txth1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lobster"
        android:text="Pizza Hut"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="33sp"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/lobster"
        android:text="hello explore your dream food"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtnameViewX"
            android:text="Pizza Name  : "
            android:textSize="20dp"
            android:gravity="center_vertical"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/adamina"
            android:textStyle="bold"
            android:layout_marginLeft="50dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtnameView"
            android:text="Pizza"
            android:textSize="20dp"
            android:gravity="center_vertical"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/adamina"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtpriceViewX"
            android:text="price  :  "
            android:textSize="20dp"
            android:layout_marginTop="40dp"
            android:gravity="center_vertical"
            android:fontFamily="@font/adamina"
            android:textStyle="bold"
            android:layout_marginLeft="50dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtpriceView"
            android:text="price"
            android:textSize="20dp"
            android:layout_marginTop="40dp"
            android:gravity="center_vertical"
            android:fontFamily="@font/adamina"
            android:textStyle="bold"
            android:layout_marginLeft="80dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtpriceViewQ"
            android:text="Quentity :"
            android:textSize="20dp"
            android:layout_marginTop="40dp"
            android:gravity="center_vertical"
            android:fontFamily="@font/adamina"
            android:textStyle="bold"
            android:layout_marginLeft="50dp"
            />

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="45dp"
            android:id="@+id/addquantity"
            android:background="@drawable/ic_baseline_add_circle_outline_24"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="45dp"
            android:id="@+id/quantity"
            android:textSize="28sp"
            android:layout_toRightOf="@+id/addquantity"/>


        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/subquantity"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="45dp"
            android:layout_toRightOf="@+id/quantity"
            android:background="@drawable/ic_baseline_remove_circle_outline_24"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtTotalQX"
            android:text="Total :"
            android:textSize="20dp"
            android:layout_marginTop="40dp"
            android:gravity="center_vertical"
            android:fontFamily="@font/adamina"
            android:textStyle="bold"
            android:layout_marginLeft="50dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtTotalQ"
            android:text="Total "
            android:textSize="20dp"
            android:layout_marginTop="40dp"
            android:gravity="center_vertical"
            android:fontFamily="@font/adamina"
            android:textStyle="bold"
            android:layout_marginLeft="90dp"
            />
    </LinearLayout>

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_bg_design"
        android:backgroundTint="#F44336"
        android:padding="14dp"
        android:text="Add To Cart"
        android:onClick="AddToCart"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
         />

</LinearLayout>